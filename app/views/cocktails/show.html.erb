<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= render 'doses/form', cocktail: @cocktail, dose: @dose, ingredients: @ingredients %>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <p>
            <%= dose.ingredient.name %> - <%= dose.description %>
          </p>
        </li>
        <% end %>
      </ul>
      <%= link_to 'Back', cocktails_path %>
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>
